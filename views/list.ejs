<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />

        <title>ToDo : List</title>
    </head>
    <body>
        <%- include('nav.ejs') %>

        <h4 class="mt-4 text-center">
            <strong>List</strong>
        </h4>

        
        <div class="container">

            <ul class="list-group list-group-flush">
                <% for(var i = 0; i < posts.length; i++){ %>
                <li class="list-group-item" >
                    <p>num : <%= posts[i]._id %>  </p>
                   <a href="/detail/<%= posts[i]._id %>"  style="text-decoration: none">
                       <h4>할 일 제목 : <%= posts[i].title %> <h4>
                   </a> 
                        <p>할 일 마감날짜 : <%= posts[i].date %></p>
                        <button class="btn btn-danger delete" data-id="<%= posts[i]._id %>">삭제</button>
                        <a href="/edit/<%= posts[i]._id  %> ">
                            <button class="btn btn-primary" data-id="<%= posts[i]._id %>" >수정</button>
                        </a>
                </li>
                <% } %>  
            </ul>
            
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script>
            
            $('.delete').click(function(e){
            $.ajax({
                method: 'DELETE',
                url: '/delete',
                data: { _id: e.target.dataset.id }
            }).done(()=>{
                console.log('삭제완료!');
                $(e.target).parents('li').fadeOut();
            })
        });
  
  
            
        </script>

        

